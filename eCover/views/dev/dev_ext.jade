extend ../public/layout

block content

  //- Comments with - will not be compiled to markup version of this file
  // Jade/Pug syntax for form
  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name))
      button.btn.btn-primary(type='submit') Submit
  </form>
  if errors 
   ul
    for error in errors
     li!= error.msg