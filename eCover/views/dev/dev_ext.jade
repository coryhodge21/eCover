extend ../public/layout

block content

  div( class="dev-ext-account")
    h3= name
    h3 Balance:  #{balance}

    // HTML Version of form is acceptable in jade/pug
    <form action="/team_name_url/" method="post">
      <label for="team_name">Enter name: </label>
      <input id="team_name" type="text" name="name_field" value="Default name for team.">
      <input type="submit" value="OK">
    </form>

  // Jade/Pug syntax for form
  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg